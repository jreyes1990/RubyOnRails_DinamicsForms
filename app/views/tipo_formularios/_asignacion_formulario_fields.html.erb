<div class="nested-fields">
  <div class="form-row align-items-center mb-3">
    <div class="col">
      <%= f.input :departamento_id, label: false, input_html: { class: 'form-control', disabled: false } %>
    </div>
    <div class="col">
      <%= f.input :seccion_id, label: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="col">
      <%= f.input :subseccion_id, label: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="col">
      <%= f.input :empleado_id, label: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="col-auto">
      <%= link_to_remove_association "Eliminar", f, class: "btn btn-danger" %>
    </div>
  </div>
</div>