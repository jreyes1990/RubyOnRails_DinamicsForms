<p id="notice"><%= notice %></p>

<h1>Tipo Formularios</h1>
<% mp = PgEmpresa.where(status: "A")
   mp.each do |mp|
    puts ("Empresa: #{mp.descripcion}")
   end
   
%>

<table>
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Area</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>User created</th>
      <th>User created</th>
      <th>Usr grab</th>
      <th>Usr modi</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_formularios.each do |tipo_formulario| %>
      <tr>
        <td><%= tipo_formulario.empresa_id %></td>
        <td><%= tipo_formulario.area_id %></td>
        <td><%= tipo_formulario.nombre %></td>
        <td><%= tipo_formulario.descripcion %></td>
        <td><%= tipo_formulario.user_created_id %></td>
        <td><%= tipo_formulario.user_created_id %></td>
        <td><%= tipo_formulario.usr_grab %></td>
        <td><%= tipo_formulario.usr_modi %></td>
        <td><%= tipo_formulario.estado %></td>
        <td><%= link_to 'Show', tipo_formulario %></td>
        <td><%= link_to 'Edit', edit_tipo_formulario_path(tipo_formulario) %></td>
        <td><%= link_to 'Destroy', tipo_formulario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Formulario', new_tipo_formulario_path %>

<h2>Replicar Formularios</h2>
<%= form_with url: replicate_all_tipo_formulario_path(id: 0), method: :post, local: true do %>
  <div class="field">
    <%= label_tag :source_empresa_id, "Empresa Origen" %>
    <%= text_field_tag :source_empresa_id, nil, class: 'form-control' %>
  </div>
  <div class="field">
    <%= label_tag :source_area_id, "Área Origen" %>
    <%= text_field_tag :source_area_id, nil, class: 'form-control' %>
  </div>
  <div class="field">
    <%= label_tag :target_empresa_id, "Empresa Destino" %>
    <%= text_field_tag :target_empresa_id, nil, class: 'form-control' %>
  </div>
  <div class="field">
    <%= label_tag :target_area_id, "Área Destino" %>
    <%= text_field_tag :target_area_id, nil, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= submit_tag "Replicar Formularios", class: 'btn btn-warning' %>
  </div>
<% end %>
