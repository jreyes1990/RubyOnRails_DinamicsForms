<%= simple_form_for @tipo_formulario, html: { class: 'container mt-0' } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <% puts "RECIBIENDO BANDERA: #{flag_tipo_formulario}" 
    if flag_tipo_formulario.to_i == 0
      @visible = false
    elsif flag_tipo_formulario.to_i == 1
      @visible = true
    end

    puts "ENVIANDO BANDERA: #{@visible}" 
    %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :empresa_id, input_html: { disabled: @visible } %>
      </div>
      <div class="col-md-6">
        <%= f.input :area_id, input_html: { disabled: @visible } %>
      </div>
    </div>  
      <%= f.input :nombre, input_html: { disabled: @visible } %>
      <%= f.input :descripcion %>
    
  </div>

  <div class="form-group">
    <%= f.simple_fields_for :config_formularios, @config_formularios_activos do |cfg_for| %>
      <%= render 'config_formulario_fields', f: cfg_for %>
    <% end %>
  </div>
  <div class="links">
    <%= link_to_add_association 'Agregar ConfiguraciÃ³n', f, :config_formularios, class: "btn btn-success" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
