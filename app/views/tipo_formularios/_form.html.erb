<div class="container mt-3">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <div class="row">
        <div class="col text-left">
          <h5 class="m-0 font-weight-bold text-primary">Configuración de formulario</h5>
        </div>
        <div class="col text-right">
          <%= link_to tipo_formularios_path, class: "btn btn-primary btn-sm" do %>
            <span class="icon text-red-50">
              <i class="fas fa-arrow-circle-left"></i>
            </span> 
            <span class="text">REGRESAR</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <%= simple_form_for @tipo_formulario, html: { class: '' } do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <% 
          if flag_tipo_formulario.to_i == 0
            @visible = false
          elsif flag_tipo_formulario.to_i == 1
            @visible = true
          end
        %>

        
          <div class="form-inputs">
            <% unique_tipo_form_id = "tipo_form_#{f.object_id}" %>
            <!-- INICIO DEL ENCABEZADO DEL TIPO DE FORMULARIO -->
            <div class="card-header py-0" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="cardBody<%= unique_tipo_form_id %>" href="#cardBody<%= unique_tipo_form_id %>" style="cursor: pointer; border-radius: 0px; padding: 0px;">
              <%= content_tag(:h5, 'Tipo de formulario', class: 'text-left font-weight-bold text-primary', style: "padding-left: 20px; padding-top: 10px;" ) %>
            </div>
            <div class="card-body collapse show" id="cardBody<%= unique_tipo_form_id %>" style="padding: 0px; padding-top: 0px;">
              <div class="card shadow mb-12">
                <div class="col-12">
                  <div class="row">
                    <div class="col">
                      <%= f.input :empresa_id, input_html: { disabled: @visible } %>
                    </div>
                    <div class="col">
                      <%= f.input :area_id, input_html: { disabled: @visible } %>
                    </div>
                  </div>  
                  <%= f.input :nombre, input_html: { disabled: @visible } %>
                  <%= f.input :descripcion %>
                </div>
              </div>
            </div>
            <br>
            <!-- FIN DEL ENCABEZADO DEL TIPO DE FORMULARIO -->

            <!-- INICIO DE LA CONFIGURACION DEL FORMULARIO -->
            <% unique_config_id = "config_form_#{f.object_id}" %>
            <div class="card-header py-0" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="cardBody<%= unique_config_id %>" href="#cardBody<%= unique_config_id %>" style="cursor: pointer; border-radius: 0px; padding: 0px;">
              <%= content_tag(:h5, 'Configuración y Asignación de formulario', class: 'text-left font-weight-bold text-primary', style: "padding-left: 20px; padding-top: 10px;") %>
            </div>
            <div class="card-body collapse show" id="cardBody<%= unique_config_id %>" style="padding: 0px; padding-top: 0px;">
              <div class="card shadow mb-12">
                <br>
                <% f.object.config_formularios.where(estado: 'A').each do |config_formulario_activos| %>
                  <%= f.simple_fields_for :config_formularios, config_formulario_activos do |cfg_for| %>
                    <% unique_cfg_form_id = "config_form_#{cfg_for.object_id}" %>

                    <div class="col-12 table-responsive">
                      <h3>Configuración del formulario</h3>
                      <table class="table custom-table table-sm" id="<%= unique_cfg_form_id %>" width="100%" cellpadding="0" cellspacing="0">
                        <thead class="thead-light">
                          <tr>
                            <th class="col-3">Formulario</th>
                            <th class="col-3">¿Tiene AppSiga?</th>
                            <th class="col">Descripción</th>
                            <th class="col-auto"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <%= render 'config_formulario_fields', f: cfg_for %>
                          <% unique_id = "asig_form_#{cfg_for.object_id}" %>
                              
                              
                              <!-- INICIO DE LA ASIGNACIÓN DEL FORMULARIO -->
                              <table class="table custom-table table-sm" id="<%= unique_id %>" width="100%" cellpadding="0" cellspacing="0" >
                                <thead class="thead-light">
                                  <tr>
                                    <th class="col-3">Departamento</th>
                                    <th class="col-3">Seccion</th>
                                    <th class="col-3">SubSeccion</th>
                                    <th class="col-3">Empleado</th>
                                    <th class="col-auto"></th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% cfg_for.object.asignacion_formularios.where(estado: 'A').each do |asigna_formulario_activos| %>
                                    <%= cfg_for.simple_fields_for :asignacion_formularios, asigna_formulario_activos do |asig_for| %>
                                        <%= render 'asignacion_formulario_fields', f: asig_for %>
                                    <% end %>
                                  <% end %>
                                </tbody>
                              </table>
                              <div class="row">
                                <div class="col">
                                  <div class="text-right">
                                    <%= link_to_add_association 'Agregar Asignación', cfg_for, :asignacion_formularios, data: {"association-insertion-node" => "##{unique_id} tbody", "association-insertion-method" => "append"}, class: "btn btn-success" %>
                                  </div>
                                </div>
                              </div>
                              <!-- FIN DE LA ASIGNACIÓN DEL FORMULARIO -->

                            
                        </tbody>
                      </table>
                      <br>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <br>
              <div class="row">
                <div class="col">
                  <div class="text-right">
                    <%= link_to_add_association 'Agregar Configuración', f, :config_formularios, data: {"association-insertion-node" => "##{unique_config_id} tbody", "association-insertion-method" => "append"}, class: "btn btn-success" %>
                  </div>
                </div>
              </div>
            </div>
            <!-- FIN DE LA CONFIGURACION DEL FORMULARIO -->

          </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>